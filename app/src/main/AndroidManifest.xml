<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nada.coach_nutrition">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Coach" />
        <activity android:name=".Parameters" />
        <activity
            android:name=".AddMeal"
            android:label="@string/title_activity_add_meal"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".ChangeGoal" />

        <provider
            android:name=".BaseContentProvider"
            android:authorities="com.example.nada.contentProvider"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".displayFood" />
        <activity android:name=".SetPortion" />
        <activity android:name=".Monitoring"></activity>
    </application>

</manifest>